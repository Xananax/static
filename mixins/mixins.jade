mixin modal(content,id)
	.modal.container(id=id?id:'')
			.modal-wrapper.valign-container
				.valign-content
					.modal-content
						.content= content
						a.modal-close.btn.btn-big.btn-round x

mixin img(src,title,width,height,classes,realSrc)
	- var style = (width ? 'width:'+width+'px;' : '') + (height ? 'height:'+height+'px;' : '')+(!realSrc ? 'background-image:url("'+src+'");':'');
	if !title
		- title = src.split('.');
		- title.pop();
		- title = title.join('.');
	span.image(title=title,class=(classes||'')+(!realSrc?' loaded':''),data-src=src)

mixin js(s,external)
	script(type="text/javascript", src=s+".js")

mixin css(c)
	link(rel='stylesheet',type='text/css',href=c+".css")